---
import Hero from "../components/Hero.astro";
import SectionAbout from "../components/SectionAbout.astro";
import SectionContact from "../components/SectionContact.astro";
import SectionProject from "../components/SectionProject.astro";
import Layout from "../layouts/Layout.astro";

---

<Layout title="JR">
	
	<main class="flex flex-col gap-4 py-2 px-10 mx-4">
		<section id="home">
			<Hero />
		</section>
		<hr  class="w-48 h-1 mx-auto my-4 bg-gray-100 border-0 rounded md:my-10 dark:bg-gray-700 opacity-25">
	 	<section id="about">
			<SectionAbout />
		</section>
		<hr class="w-48 h-1 mx-auto my-4 bg-gray-100 border-0 rounded md:my-10 dark:bg-gray-700 opacity-25">
		<section id="project">
			<SectionProject />
		</section>
		<hr class="w-48 h-1 mx-auto my-4 bg-gray-100 border-0 rounded md:my-10 dark:bg-gray-700 opacity-25">
		<section id="contact">
			<SectionContact />
		</section>
		
	</main>
	
</Layout>
